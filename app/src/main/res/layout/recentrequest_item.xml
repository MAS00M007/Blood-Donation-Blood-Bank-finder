<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/recentDonorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recentDonorBloodTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentDonorNameTextView"
            android:text="Blood Type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recentDonorCityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentDonorBloodTypeTextView"
            android:text="City"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recentDonorPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentDonorCityTextView"
            android:text="Phone Number"
            android:textSize="16sp" />

        <Button
            android:id="@+id/recentDonorCallMeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Call Me" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
